<apex:page
  controller="AzureOAuthController"
  showHeader="false"
  sidebar="false"
  standardStylesheets="false"
>
  <script>
    // Redirect the user to Azure's authorization URL as soon as the page loads
    window.onload = function () {
      var authUrl = "{!authUrl}"; // Generated in the controller
      console.log("Redirecting to:", authUrl);
      window.location.href = authUrl;
    };
  </script>

  <h1>Connecting to Azure...</h1>
  <!-- You can add a loading message or spinner here if desired -->
</apex:page>
